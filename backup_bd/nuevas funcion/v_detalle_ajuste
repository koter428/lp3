
CREATE OR REPLACE VIEW public.v_detalle_ajustes AS
 SELECT a.aju_cod,
    a.dep_cod,
    b.dep_descri,
    a.art_cod,
    c.art_descri,
    c.tipo_cod,
    a.aju_cant,
    a.aju_cant * a.aju_precio  AS subtotal,
    a.aju_precio,
	a.mot_cod,
	a.mot_tipo
   FROM ajustes_detalle a
     JOIN deposito b ON a.dep_cod = b.dep_cod
     JOIN articulo c ON a.art_cod = c.art_cod;

ALTER TABLE public.v_detalle_ajustes
    OWNER TO postgres;
