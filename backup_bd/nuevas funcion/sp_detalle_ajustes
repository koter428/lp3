	select public.sp_detalle_ajustes(1,2,2,1,1,145000,5,'E') as resul
	select public.sp_detalle_ajustes(2,2,2,1,2,100000,5,'S') as resul
	select public.sp_detalle_ajustes(3,2) as resul
	
	select * from ajustes_detalle;
*/
